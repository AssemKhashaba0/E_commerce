@model SupportMessage
@{
    ViewData["Title"] = "Contact";
}

<style>
    /* تنسيق حاوية النموذج */
    .contact-container {
        width: 80%; /* تكبير العرض ليصبح 80% */
        background: linear-gradient(135deg, #4A148C, #8E24AA);
        color: #fff;
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

        /* تنسيق عنوان النموذج */
        .contact-container h2 {
            font-weight: bold;
            text-align: center;
            color: #FFB300;
            margin-bottom: 30px;
            font-size: 28px;
        }

    /* تنسيق الحقول */
    .form-control {
        background-color: #f3e5f5;
        border: none;
        border-radius: 8px;
        padding: 15px;
        font-size: 16px;
        color: #4A148C;
        margin-bottom: 20px;
    }

        .form-control::placeholder {
            color: #8E24AA;
        }

    /* تنسيق زر الإرسال */
    .btn-primary {
        background-color: #FFB300;
        border: none;
        padding: 12px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #FFA000;
            transform: scale(1.05);
        }

    /* تنسيق رسالة الخطأ */
    .text-danger {
        font-size: 14px;
        margin-top: -10px;
    }
</style>

<div class="container mt-5 d-flex justify-content-center">
    <div class="contact-container">
        <h2>Contact Support</h2>
        <form asp-action="Contact" asp-controller="Support" method="post">
            <div class="form-group">
                <label for="UserName" class="font-weight-bold">Your Name</label>
                <input type="text" id="UserName" class="form-control" name="UserName" placeholder="Enter your name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email" class="font-weight-bold">Your Email</label>
                <input type="email" id="email" class="form-control" name="UserEmail" placeholder="example@example.com"  />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Message" class="font-weight-bold">Message</label>
                <textarea id="Message" class="form-control" name="Message" rows="5" placeholder="Enter your message..." ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-4">Send Message</button>
        </form>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
    </div>
</div>
