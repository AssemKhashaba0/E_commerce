@model product

<style>
    body {
        background-color: #f3f4f6;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background: linear-gradient(135deg, #4A148C, #8E24AA);
        color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
    }

    .form-title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #f3e5f5;
    }

    .form-control {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
        border-radius: 8px;
        padding: 10px;
    }

    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 100%;
        margin-top: 10px;
    }

    .file-input-label {
        background-color: #FFB300;
        color: #ffffff;
        border: none;
        font-weight: bold;
        padding: 10px;
        width: 100%;
        text-align: center;
        display: block;
        cursor: pointer;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .file-input-label:hover {
            background-color: #FF8F00;
        }

    #image {
        position: absolute;
        top: 0;
        right: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .btn-custom {
        background-color: #FFB300;
        color: #ffffff;
        border: none;
        font-weight: bold;
        padding: 10px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        margin-top: 20px;
    }

        .btn-custom:hover {
            background-color: #FF8F00;
        }

    .image-preview {
        margin-top: 20px;
        display: none;
        text-align: center;
    }

        .image-preview img {
            max-width: 100%;
            max-height: 300px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>
<div class="form-container">
    <h2 class="form-title">Add Product Form</h2>
    <form  method="post" asp-controller="product" asp-action="create" enctype="multipart/form-data" >
        <div class="form-group">
            <label for="productName">Product Name</label>
            <input  class="form-control" asp-for="Name">
             <span  class="text-danger" asp-validation-for="Name"></span>

        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" asp-for="Description">@Model.Description </textarea>
        </div>
             <span  class="text-danger" asp-validation-for="Description"></span>

        <div class="form-group">
            <label for="price">Price</label>
            <input  class="form-control"asp-for="Price">
        </div>
             <span  class="text-danger" asp-validation-for="Price"></span>

        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" id="category" name="categoryId" >
                <option selected disabled>Choose a category</option>
                @foreach(var item in ViewBag.category)
                {
                 

                    
                    <option value="@item.Id">@item.Name</option>
               

                }
            </select>
             <span  class="text-danger" asp-validation-for="categoryId"></span>


        </div>

        <div class="form-group">
            <label for="image">Product Image</label>
            <div class="file-input-wrapper">
                <label for="image"  class="file-input-label">Choose File</label>
                <input type="file" name="ImgUrl" class="form-control-file" id="image" accept="image/*"  onchange="previewImage(event)">
             <span  class="text-danger" asp-validation-for="ImgUrl"></span>

            </div>
        </div>

        <div class="image-preview" id="imagePreview">
            <p>Image Preview:</p>
            <img id="preview" src="#" alt="Image Preview">
        </div>

        <button type="submit" class="btn btn-custom btn-block">Submit</button>
    </form>
</div>
<script>
    function previewImage(event) {
        const preview = document.getElementById('preview');
        const imagePreviewContainer = document.getElementById('imagePreview');

        // Check if an image file is selected
        if (event.target.files && event.target.files[0]) {
            const reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                imagePreviewContainer.style.display = 'block';
            };

            reader.readAsDataURL(event.target.files[0]);
        }
    }
</script>

@section Scripts {
                <partial name="_ValidationScriptsPartial.cshtml"></partial>
}