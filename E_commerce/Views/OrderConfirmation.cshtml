@model List<E_commerce.Models.Cart>

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f4f4f4;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4A148C;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <h2>Thank you for your purchase!</h2>
    <p>You have successfully purchased the following items:</p>

    <table>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.product.Name</td>
                <td>@item.Count</td>
                <td>@item.product.Price.ToString("C")</td>
            </tr>
        }
    </table>

    <h3>Total: @Model.Sum(e => e.product.Price * e.Count).ToString("C")</h3>
    <p>Thank you for shopping with us. We hope to see you again soon!</p>
</body>
</html>
