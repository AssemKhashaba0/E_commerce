@model Campany

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Create New Company</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 rounded shadow-sm form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Company Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Company Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" placeholder="Company Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
<style>

body {
    background-color: #f8f9fa; /* Light background for the page */
    font-family: Arial, sans-serif;
}

h1, h4 {
    color: #343a40; /* Dark text for headings */
}

.form-container {
    background-color: #ffffff; /* White background for the form */
    border: 1px solid #dee2e6; /* Light border */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
}

.form-group {
    margin-bottom: 1.5rem; /* Space between form groups */
}

.btn {
    width: 100%; /* Full-width buttons */
}

.btn-primary {
    background-color: #007bff; /* Bootstrap primary color */
    border-color: #007bff;
}

.btn-secondary {
    background-color: #6c757d; /* Bootstrap secondary color */
    border-color: #6c757d;
}

.text-danger {
    font-size: 0.9rem; /* Smaller size for error messages */
}

</style>