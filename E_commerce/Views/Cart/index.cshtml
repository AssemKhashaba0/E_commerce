@model List<Cart>
<div class="cart-container">
    <form id="cart-form" method="POST" action="/Cart/pay">
        @foreach(var item in Model)
        {
            <div class="cart-item">
                <img src="~/img/@item.product.ImgUrl" alt="Denim T-Shirt">
                <div class="item-details">
                    <h3>@item.product.Name</h3>
                    <p>category: @item.product.Description</p>
                    <p>
                        Quantity:
                        <a href="/cart/Dicrement?productId=@item.productId">
                        <button type="button" class="decrease-item">-</button>
                        </a>
                        <input type="number" value="@item.Count" class="item-quantity" id="quantity-1" name="quantity-1" readonly>
                        <a href="/cart/Increment?productId=@item.productId">
                        <button type="button" class="increase-item" >+</button>
                        </a>
                    </p>
                </div>
                <p class="item-price"> Subtotal: @(@item.product.Price *  @item.Count) $</p>
                <a href="/cart/Delete?productId=@item.productId">
                <button type="button" class="remove-item">&times;</button>
                </a>
            </div>



            
        }
        <div class="subtotal">
            <a href="/" class="back-to-shop">Back to Shop</a>
            <p>Total: <span class="total-price">@ViewBag.TotalPrice</span></p>
        </div>
                    <button type="submit" class="checkout-btn">Proceed to Checkout</button>

    </form>
</div>

<style>
    .cart-container {
        width: 100%;
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

        .cart-item img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 8px;
        }

    .item-details {
        flex-grow: 1;
        margin-left: 20px;
    }

        .item-details h3 {
            margin: 0;
            font-size: 16px;
            font-weight: bold;
        }

    .item-price {
        font-size: 16px;
        font-weight: bold;
    }

    .remove-item, .increase-item, .decrease-item {
        background-color: #ff4444;
        color: white;
        border: none;
        padding: 8px 12px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 10px;
    }

    .increase-item {
        background-color: #4CAF50;
    }

    .decrease-item {
        background-color: #FF7043;
    }

    .subtotal {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        font-size: 18px;
    }

    .back-to-shop {
        color: #4A148C;
        text-decoration: none;
    }

    .checkout-btn {
        width: 100%;
        padding: 15px;
        font-size: 18px;
        background-color: #8E24AA;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
    }

        .checkout-btn:hover {
            background-color: #7a1c8c;
        }

    .item-quantity {
        width: 50px;
        padding: 5px;
        margin-left: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
        text-align: center;
    }

</style>

